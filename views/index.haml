!!!
%html{:'ng-app' => 'tracking'}
  %head
    %title Tracka.se
    %meta{:name => 'description', :content => "Tracka dina paket skickade via posten eller andra tjänster på ett smidigt sätt."}
    %script{:src => '/js/jquery.min.js', :type => "text/javascript"}
    %script{:src => 'http://ajax.googleapis.com/ajax/libs/angularjs/1.0.4/angular.min.js'}
    %script{:src => 'http://ajax.googleapis.com/ajax/libs/angularjs/1.0.4/angular-resource.min.js'}
    %script{:src => '/js/bootstrap.min.js'}
    %script{:src => '/js/base.js'}
    :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-38662526-2']);
        _gaq.push(['_trackPageview']);

        (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    %link{:href => '/css/bootstrap.min.css', :rel => 'stylesheet'}
    %link{:href => '/css/style.css', :rel => 'stylesheet'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %link{:href => '/css/bootstrap-responsive.min.css', :rel => 'stylesheet'}
  %html
    .container
      .navbar
        .navbar-inner
          %a.brand{:href => '/'}
            Tracka.se
          %ul.nav.pull-right
            %li
              %a{:href => 'http://github.com/cheif/tracka.se'}
                Project @ GitHub
      .row
        .span6{:'ng-controller' => 'SearchController'}
          %h2 Sök paket:
          .row
            %form{:'ng-submit' => "addSearch()"}
              .span5
                %input{:type => 'text', :'ng-model' => 'kollinr', :style => 'width: 95%', :placeholder => 'Kollinummer'}
              .span1
                %input.btn-primary{:type => 'submit', :value => 'Search'}
          Posten, FedEx etc.
          %h3 Tidigare sökningar:
          %ul#oldsearches.nav.nav-tabs.nav-stacked
            %li{:'ng-repeat' => 'search in searches'}
              %a{:href => "#/detail/{{search.id}}", :class => "{{search.service | lowercase}}"}
                {{search.id}}
        .span6{:'ng-view' => ''}
    .navbar.navbar-fixed-bottom
      .navbar-inner
        .container
          Designed and built by
          %a{:href => 'http://twitter.com/kjellout'}
            @kjellout
          %br
          Using
          %a{:href => 'http://twitter.github.com/bootstrap/index.html'}
            Bootstrap
          and
          %a{:href => 'http://angularjs.org/'}
            AngularJS

